<form action="/post/create" method="POST" class="container p-3">
  <div class="form-group">
    <label for="newTitle">Título:</label>
    <input type="text" class="form-control" id="newTitle" name="title" />
  </div>
  <div class="form-group">
    <label for="newContent">Conteúdo:</label>
    <textarea class="form-control" id="newContent" name="content"></textarea>
  </div>
  <button type="submit" class="btn mt-3 btn-success">Enviar post</button>
</form>